<h4 class="ui center aligned medium icon header">
  <p>Welcome to MessageMe - <em>a complete Chat App</em></p>
  <i class="circular orange power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email, "Email" %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: 'johndoe@domain.com' %>
            <i class="user icon"></i>
          </div>
        </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
      </div>
      <%= f.button "Login", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
        <%= link_to('Sign Up', signup_path, class: "ui big button orange") %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>